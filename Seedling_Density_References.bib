	author = {Zhu, Kai and Woodall, Christopher W. and Monteiro, João V. D. and Clark, James S.},
	year = {2015},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/14-1780.1},
	keywords = {density dependence, Janzen-Connell hypothesis, demography, diversity maintenance, Forest Inventory and Analysis, population dynamics, recruitment, temperate forest},
	pages = {2319--2327},
	file = {Full Text PDF:C\:\\Users\\Bryce\\Zotero\\storage\\ZLLKKVM7\\Zhu et al. - 2015 - Prevalence and strength of density-dependent tree recruitment.pdf:application/pdf;Snapshot:C\:\\Users\\Bryce\\Zotero\\storage\\WQ9J5WYW\\14-1780.html:text/html},
